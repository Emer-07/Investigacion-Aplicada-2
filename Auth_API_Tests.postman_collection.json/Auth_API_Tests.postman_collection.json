  "item": [
    {
      "name": "Caso 1 - Registro de usuario",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"nuevo_usuario\",\n    \"password\": \"password_seguro\",\n    \"email\": \"correo@ejemplo.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "register"]
        }
      },
      "response": []
    },
    {
      "name": "Caso 2 - Login de usuario",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"nuevo_usuario\",\n    \"password\": \"password_seguro\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "login"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.token) {",
              "   pm.environment.set(\"authToken\", jsonData.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Caso 3 - Acceso recurso protegido",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/protected-resource",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "protected-resource"]
        }
      },
      "response": []
    },
